{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "types": ["node"],
    "sourceMap": false,
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src"]
}
